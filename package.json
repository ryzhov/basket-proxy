{
  "name": "opec-proxy",
  "version": "0.0.1",
  "description": "OPEC Basket price API Proxy",
  "scripts": {
    "prebuild": "rm -rf dist/*",
    "build": "tsc",
    "postbuild": "cp .env package.json package-lock.json dist/",
    "start": "ts-node-dev --transpileOnly -r dotenv/config ./src/server.ts",
    "prod": "export NODE_ENV=production && node -r dotenv/config dist/server.js",
    "set-env": "APP_VERSION=$npm_package_version && echo $APP_VERSION"
  },
  "author": "ryzhov@uiptel.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fast-xml-parser": "^3.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "nodemon": "^2.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
